{% for figure in figures %}
    <div class="col-lg-6">
        <div class="position-relative mb-5">
            {% if figure.pictureFigures|length > 0 %}
                <img class="img-fluid rounded-3 mb-3 fixed-size" width="600"  height="400" src="{{ asset('uploads/figures/' ~ figure.pictureFigures[0].name) }}" alt="Image de {{ figure.name }}">
            {% elseif figure.videoFigures|length > 0 %}
                <iframe
                        class="img-fluid rounded-3 mb-3 video-size"
                        title="VidÃ©o de {{ figure.name }}"
                        src="{{ figure.videoFigures[0].embedUrl|raw }}"
                        frameborder="0"
                        allowfullscreen
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share">
                </iframe>
            {% else %}
                <p class="">Aucune image disponible.</p>
            {% endif %}
            {#                        <img class="img-fluid rounded-3 mb-3" src="https://dummyimage.com/600x400/343a40/6c757d" alt="..." />#}
            <a class="h3 fw-bolder text-decoration-none link-dark stretched-link" href="{{ path('app_figure_show', {'slug': figure.slug}) }}">{{ figure.name }}</a>
        </div>
    </div>
{% endfor %}