{% extends 'base.html.twig' %}

{% block title %}Hello WelcomeController!{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/welcome/index.css') }}">
{% endblock %}

{% block body %}
    <header class="bg-dark">
        <img class="h-100 w-100" src="{{ asset('assets/img/snowboard_neige_figure_saut_shutterstock.jpg') }}"
             alt="a snowboard jump figure">
        <a href="#figures" class="position-absolute arrow-down">
            <img src="{{ asset('assets/img/arrowDown.svg') }}" alt="an arrow down" width="50" height="50">
        </a>
        <p class="px-5 fs-4 fw-bold fst-italic position-absolute catchphrase">
            "Rejoignez notre communauté de riders passionnés et partagez vos meilleures figures de snowboard. Que vous
            soyez un pro des tricks ou un débutant en quête de conseils, trouvez l'inspiration et le
            soutien pour dominer les pistes comme jamais !"
        </p>
    </header>
    <section class="py-5" id="figures">
        <div class="container px-5 my-5">
            <div class="row gx-5">
                {% for figure in figures %}
                    <div class="col-lg-4 col-xl-3 mb-5">
                        <div class="card h-100 shadow border-0">
{#                            <img class="card-img-top" src="https://dummyimage.com/600x350/ced4da/6c757d" alt="..."/>#}
                            {% if figure.pictureFigures|length > 0 %}
                                <img class="h-75" src="{{ asset('uploads/figures/' ~ figure.pictureFigures[0].name) }}" alt="Image de {{ figure.name }}">
                            {% else %}
                                <p class="h-75">Aucune image disponible.</p>
                            {% endif %}
                            <div class="card-body p-4 row">
                                <a class="col-8 d-flex align-items-end px-0 js-figure-details"
                                   href="#js-figure-informations">
                                    <h5 class="card-title fw-bold my-0 w-100 h-100">{{ figure.name }}</h5>
                                </a>
                                <div class="col-4 d-flex justify-content-between">
                                    <a class="col-6 px-0 d-flex justify-content-end"
                                       href="{{ path('app_figure_edit', {'slug' : figure.slug}) }}">
                                        <img class="" src="{{ asset('assets/img/pencilToEdit.svg') }}"
                                             alt="a pencil to edit a figure">
                                    </a>
                                    <a class="col-6 px-0 d-flex justify-content-end"
                                       href="{{ path('app_figure_delete', {'slug' : figure.slug}) }}">
                                        <img class="" src="{{ asset('assets/img/bin.svg') }}"
                                             alt="a bin to delete a figure">
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <dialog id="js-figure-informations" class="container-fluid w-75 border-1 rounded-3 p-0" aria-hidden="true" role="alertdialog" aria-labelledby="title-model">
    </dialog>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/welcome/index.js') }}"></script>
{% endblock %}