{% for figure in figures %}
    <div class="col-lg-4 col-xl-3 mb-5">
        <div class="card h-100 shadow border-0">
            {#                            <img class="card-img-top" src="https://dummyimage.com/600x350/ced4da/6c757d" alt="..."/>#}
            {% if figure.pictureFigures|length > 0 %}
                <img class="h-75" src="{{ asset('uploads/figures/' ~ figure.pictureFigures[0].name) }}" alt="Image de {{ figure.name }}">
            {% elseif figure.videoFigures|length > 0 %}
                <iframe
                        class="w-100 h-100"
                        title="VidÃ©o de {{ figure.name }}"
                        src="{{ figure.videoFigures[0].embedUrl|raw }}"
                        frameborder="0"
                        allowfullscreen
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share">
                </iframe>
            {% else %}
                <p class="h-75">No available picture or video.</p>
            {% endif %}
            <div class="card-body p-4 row">
                <a class="col-8 d-flex align-items-end px-0 js-figure-details"
                   href=".js-figure-informations">
                    <h5 class="card-title fw-bold my-0 w-100 h-100">{{ figure.name }}</h5>
                </a>
                <div class="col-4 d-flex justify-content-between card-symbols">
                    <a class="col-6 px-0 d-flex justify-content-end"
                       href="{{ path('app_figure_edit', {'slug' : figure.slug}) }}">
                        <img class="" src="{{ asset('assets/img/pencilToEdit.svg') }}"
                             alt="a pencil to edit a figure">
                    </a>
                    <form method="POST" action="{{ path('app_figure_delete', {'slug': figure.slug}) }}" onsubmit="return confirm('Are you sure to delete this figure ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ figure.id) }}">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="h-100 border-0 bg-transparent p-0">
                            <img class="h-100" src="{{ asset('assets/img/bin.svg') }}" alt="a bin to delete a figure">
                        </button>
                    </form>

                </div>
            </div>
        </div>
    </div>
{% endfor %}